<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kg.konggang_guide.other.activity.InputAddressActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_22"
        android:background="@color/theme_white"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_white">


        <LinearLayout
            android:layout_marginTop="@dimen/y6"
            android:layout_marginBottom="@dimen/y6"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y28"
            android:background="@drawable/shape_bg_4_grey02">

            <ImageView
                android:layout_marginLeft="@dimen/x3"
                android:layout_width="@dimen/x6"
                android:layout_height="@dimen/y12"
                android:src="@mipmap/app_search"/>



            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


                <Spinner
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_width="@dimen/x20"
                    android:layout_height="match_parent"
                    android:id="@+id/sp_city"
                    android:spinnerMode="dropdown"
                    android:dropDownWidth="@dimen/x31"
                    android:dropDownVerticalOffset="@dimen/y19">
                </Spinner>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:background="@color/color_f3f5f9"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="深圳市"
                        android:id="@+id/tv_city"
                        android:textSize="@dimen/y10"
                        android:textColor="@color/color_333333"/>

                    <ImageView
                        android:visibility="visible"
                        android:layout_marginLeft="@dimen/x2"
                        android:layout_width="@dimen/x3"
                        android:layout_height="@dimen/y4"
                        android:src="@mipmap/drop_down"/>

                </LinearLayout>



            </FrameLayout>

            <View
                android:layout_marginTop="@dimen/y3"
                android:layout_marginBottom="@dimen/y3"
                android:layout_marginLeft="@dimen/x5"
                android:layout_width="@dimen/dimen_0.5"
                android:layout_height="match_parent"
                android:background="@color/color_a5a5a5"/>


            <EditText
                android:imeOptions="actionSearch"
                android:id="@+id/et_address"
                android:layout_marginLeft="@dimen/x5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入地址"
                android:textColor="@color/color_a5a5a5"
                android:textColorHint="@color/color_a5a5a5"
                android:background="@null"
                android:textSize="@dimen/y10"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/y10"
            android:text="取消"/>

    </LinearLayout>


    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:id="@+id/xrl_search">
    </com.jcodecraeer.xrecyclerview.XRecyclerView>

</LinearLayout>
