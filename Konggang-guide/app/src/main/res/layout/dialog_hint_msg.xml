<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/y6"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/shape_white_10_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y56">
    <LinearLayout
        android:layout_marginLeft="@dimen/x7"
        android:layout_marginTop="@dimen/y12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/y10"
            android:textColor="@color/color_333333"
            android:id="@+id/tv_time"
            android:text="23432444"/>

        <ImageView
            android:id="@+id/img_close"
            android:layout_marginRight="@dimen/x5"
            android:layout_width="@dimen/y11"
            android:layout_height="@dimen/y11"
            android:padding="@dimen/y2"

            android:src="@mipmap/close_grey"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_marginTop="@dimen/y9"
        android:layout_marginLeft="@dimen/x7"
        android:layout_marginRight="@dimen/x5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/y11"
        android:textColor="@color/color_333333"
        android:text="您有一笔明天12点30分的接机订单，请及时接单。"/>

    </LinearLayout>
</LinearLayout>