<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kg.konggang_guide.other.activity.PriceActivity">

    <include layout="@layout/aaa_app_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y13"
        android:orientation="horizontal"
        android:background="@color/theme_white">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_car"
                android:layout_marginTop="@dimen/y37"
                android:layout_marginLeft="@dimen/x17"
                android:layout_marginRight="@dimen/x20"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_official"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_official"
                        android:layout_width="@dimen/x68"
                        android:layout_height="@dimen/y48"
                        android:src="@mipmap/official"/>

                    <TextView
                        android:id="@+id/tv_official"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公务轿车"
                        android:textColor="@color/color_38adff"
                        android:textSize="@dimen/y13"/>

                    <View
                        android:id="@+id/v_line_official"
                        android:layout_width="@dimen/x31"
                        android:layout_height="@dimen/y2"
                        android:background="@color/color_38adff"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_business"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_business"
                        android:layout_marginTop="@dimen/y18"
                        android:layout_width="@dimen/x68"
                        android:layout_height="@dimen/y48"
                        android:src="@mipmap/business"/>

                    <TextView
                        android:id="@+id/tv_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商务七座"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/y13"/>

                    <View
                        android:visibility="invisible"
                        android:id="@+id/v_line_business"
                        android:layout_width="@dimen/x31"
                        android:layout_height="@dimen/y2"
                        android:background="@color/color_38adff"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_limousine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">


                    <ImageView
                        android:id="@+id/img_limousine"
                        android:layout_width="@dimen/x68"
                        android:layout_height="@dimen/y48"
                        android:layout_marginTop="@dimen/y18"
                        android:src="@mipmap/limousine02" />

                    <TextView
                    android:id="@+id/tv_limousine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="豪华轿车"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/y13"/>

                    <View
                        android:visibility="invisible"
                        android:id="@+id/v_line_limousine"
                        android:layout_width="@dimen/x31"
                        android:layout_height="@dimen/y2"
                        android:background="@color/color_38adff"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/y39"
                android:layout_toRightOf="@+id/ll_car"
                android:layout_width="@dimen/dimen_0.5"
                android:layout_height="match_parent"
                android:background="@color/color_d7d7d7"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/x34"
            android:paddingRight="@dimen/x35"
            android:layout_marginTop="@dimen/y38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginTop="@dimen/y16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/y13"
                    android:text="起步费"/>

                <TextView
                    android:id="@+id/tv_startFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y13"
                    android:textColor="@color/color_333333"
                    android:text="15元"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/y16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/y13"
                    android:text="里程费"/>

                <TextView
                    android:id="@+id/tv_mileageFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y13"
                    android:textColor="@color/color_333333"
                    android:text="2.8元/公里"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/y16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/y13"
                    android:text="时长费"/>

                <TextView
                    android:id="@+id/tv_timeFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y13"
                    android:textColor="@color/color_333333"
                    android:text="0.5元/分钟"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/y16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/y13"
                    android:text="远途费"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/y11"
                    android:text="(超出15公里后，加收远途费)"/>

                <TextView
                    android:id="@+id/tv_travelFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y13"
                    android:textColor="@color/color_333333"
                    android:text="1.5元/公里"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/y16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/y13"
                    android:text="夜间服务费"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/y11"
                    android:text="(23:00-06:00每公里加收)"/>

                <TextView
                    android:id="@+id/tv_eveFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y13"
                    android:textColor="@color/color_333333"
                    android:text="1.0元/公里"/>


            </LinearLayout>



            <TextView
                android:layout_marginTop="@dimen/y16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a5a5a5"
                android:textSize="@dimen/y13"
                android:text="注：高速费、路桥费、停车费、其他费用按行驶过 程中司机实际垫付的费用收取。"/>



        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x34"
            android:paddingRight="@dimen/x35"
            android:layout_marginTop="@dimen/y38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/y13"
                    android:text="里程费"/>

                <TextView
                    android:id="@+id/tv_price_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y13"
                    android:textColor="@color/color_333333"
                    android:text="0元/公里"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:textColor="@color/color_a5a5a5"
                android:text="每0.1公里结算："
                android:layout_marginTop="@dimen/y13"/>


            <LinearLayout
                android:layout_marginTop="@dimen/y10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/y11"
                    android:text="23:00-00:00"/>


                <TextView
                    android:id="@+id/tv_price_23_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/y11"
                    android:text="2.6元/公里"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/y6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/y11"
                    android:text="00:00-05:00"/>


                <TextView
                    android:id="@+id/tv_price_00_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/y11"
                    android:text="2.6元/公里"/>


            </LinearLayout>


            <ImageView
                android:layout_marginTop="@dimen/y16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/line_01"
                android:scaleType="fitXY"/>



            <LinearLayout
                android:layout_marginTop="@dimen/y22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/y13"
                    android:id="@+id/tv_commonTime"
                    android:text="时长费(50分钟)"/>

                <TextView
                    android:id="@+id/tv_price_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y13"
                    android:textColor="@color/color_333333"
                    android:text="0元/分钟"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/y13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/y13"
                    android:text="最低消费"/>


                <TextView
                    android:id="@+id/tv_priceMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f44b4b"
                    android:textSize="@dimen/y13"
                    android:text="13元"
                    />


            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/y12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a5a5a5"
                android:textSize="@dimen/y11"
                android:text="里程费、市场费合计不足最低消费时，直接按最低消费额计算"/>


            <ImageView
                android:layout_marginTop="@dimen/y13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/line_01"
                android:scaleType="fitXY"/>


            <LinearLayout
                android:layout_marginTop="@dimen/y16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/y13"
                    android:text="远途费"/>

                <TextView
                    android:id="@+id/tv_farPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y13"
                    android:textColor="@color/color_333333"
                    android:text="0元/公里"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/y13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/y11"
                    android:text="超过20公里后，加收远途费"/>

            </LinearLayout>

        </LinearLayout>
</LinearLayout>
</LinearLayout>