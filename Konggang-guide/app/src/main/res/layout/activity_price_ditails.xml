<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kg.konggang_guide.other.activity.PriceDitailsActivity">

    <include layout="@layout/aaa_app_title"/>

    <LinearLayout
        android:paddingLeft="@dimen/x58"
        android:paddingRight="@dimen/x58"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x57"
        android:layout_marginRight="@dimen/x57"
        android:layout_marginBottom="@dimen/y67"
        android:layout_marginTop="@dimen/y19"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_1">

        <LinearLayout
            android:layout_marginTop="@dimen/y60"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_333333"/>
            <TextView
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格预估"
                android:textSize="@dimen/y10"
                android:textColor="@color/color_333333"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_333333"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/y19"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/y19"
                android:textColor="#f44b4b"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f44b4b"
                android:textSize="@dimen/y10"
                android:text="元"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/y17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起步价"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/y11"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0元"
                android:textSize="@dimen/y11"
                android:id="@+id/tv_startPrice"
                android:textColor="@color/color_666666"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/y17"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="里程费(0公里)"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/y11"
                android:id="@+id/tv_mileage"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0元"
                android:textSize="@dimen/y11"
                android:id="@+id/tv_mileageMoney"
                android:textColor="@color/color_666666"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/y17"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时长费(0分钟)"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/y11"
                android:id="@+id/tv_time"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0元"
                android:textSize="@dimen/y11"
                android:id="@+id/tv_timeFee"
                android:textColor="@color/color_666666"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/y17"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="远途费"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/y11"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0元"
                android:id="@+id/tv_travelFee"
                android:textSize="@dimen/y11"
                android:textColor="@color/color_666666"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/y17"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出城费"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/y11"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0元"
                android:id="@+id/tv_cityFee"
                android:textSize="@dimen/y11"
                android:textColor="@color/color_666666"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/y17"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="路桥费"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/y11"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0元"
                android:textSize="@dimen/y11"
                android:textColor="@color/color_666666"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
