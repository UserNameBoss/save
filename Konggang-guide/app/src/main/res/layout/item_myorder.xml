<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/x33"
    android:paddingRight="@dimen/x33">

    <TextView
        android:layout_marginTop="@dimen/y27"
        android:layout_marginLeft="@dimen/x19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当月"
        android:textSize="@dimen/y11"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:id="@+id/tv_time"/>

    <LinearLayout
        android:layout_marginTop="@dimen/y19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即用车服务订单："
                android:textSize="@dimen/y11"
                android:textColor="@color/color_333333"/>

            <TextView
                android:id="@+id/tv_nowPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f44b4b"
                android:textSize="@dimen/y13"
                android:text="200"/>

        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="@dimen/x19">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约用车服务订单："
                    android:textSize="@dimen/y11"
                    android:textColor="@color/color_333333"/>

                <TextView
                    android:id="@+id/tv_reservationPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f44b4b"
                    android:textSize="@dimen/y13"
                    android:text="200"/>

            </LinearLayout>

    </LinearLayout>
        </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/color_d7d7d7"
        android:layout_marginTop="@dimen/y16"/>

</LinearLayout>