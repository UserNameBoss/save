<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/y6"
    >


    <LinearLayout
        android:id="@+id/rl_item"
        android:background="@color/theme_white"
        android:paddingLeft="@dimen/x4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/y8"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_type"
            android:gravity="center"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y14"
            android:textColor="@color/theme_white"
            android:textSize="@dimen/y10"
            android:text="立即用车"
            android:background="@drawable/shape_bg_red"/>

        <TextView
            android:id="@+id/tv_awaitType"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="@dimen/x6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待服务"
            android:textSize="@dimen/y9"
            android:textColor="@color/color_38adff"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_flight"
            android:visibility="gone"
            android:layout_marginTop="@dimen/y10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/y10"
                android:layout_height="@dimen/y10"
                android:src="@mipmap/flight_big"/>

            <TextView
                android:layout_marginLeft="@dimen/x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y9"
                android:text="航班号："
                android:textColor="@color/color_a5a5a5"/>

            <TextView
                android:id="@+id/tv_flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y9"
                android:text="SN00001"
                android:textColor="@color/color_a5a5a5"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/y11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/y10"
                android:layout_height="@dimen/y10"
                android:src="@mipmap/time_big"/>

            <TextView
                android:layout_marginLeft="@dimen/x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y9"
                android:text="用车时间："
                android:textColor="@color/color_a5a5a5"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y9"
                android:text="今天 16:38"
                android:textColor="@color/color_a5a5a5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/y11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/y10"
                android:layout_height="@dimen/y10"
                android:src="@mipmap/your_destination"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y10"
                android:layout_marginLeft="@dimen/x3"
                android:textColor="@color/color_333333"
                android:text="地点"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_line"
        android:layout_width="@dimen/x1"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:background="@color/color_38adff"/>
    </LinearLayout>
</RelativeLayout>