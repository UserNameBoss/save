<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kg.konggang_guide.other.activity.OrderActivity">

    <include layout="@layout/aaa_app_title"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_white">
        <LinearLayout
            android:layout_marginTop="@dimen/y33"
            android:layout_marginLeft="@dimen/x56"
            android:layout_marginRight="@dimen/x56"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y63"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_marginLeft="@dimen/x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/y4"
                    android:layout_height="@dimen/y4"
                    android:src="@mipmap/grey_point"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y27"
                    android:src="@mipmap/grey_line"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_width="@dimen/y4"
                    android:layout_height="@dimen/y4"
                    android:src="@mipmap/blue_point"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/x5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginBottom="@dimen/y9"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/y13"
                        android:background="@null"
                        android:id="@+id/tv_from"
                        android:textColor="@color/color_333333"
                        android:hint="请填写上车地点"/>

                    <ImageView
                        android:layout_marginRight="@dimen/x5"
                        android:layout_width="@dimen/x3"
                        android:layout_height="@dimen/y9"
                        android:src="@mipmap/jiantou"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/y7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/y13"
                        android:background="@null"
                        android:id="@+id/tv_to"
                        android:textColor="@color/color_333333"
                        android:hint="请填写下车地点"/>

                    <ImageView
                        android:layout_marginRight="@dimen/x5"
                        android:layout_width="@dimen/x3"
                        android:layout_height="@dimen/y9"
                        android:src="@mipmap/jiantou"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/y37"
            android:layout_marginTop="@dimen/y16"
            android:layout_marginLeft="@dimen/x56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/x5"
                android:layout_height="@dimen/y13"
                android:src="@mipmap/icon_account"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_marginLeft="@dimen/x3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_phone"
                android:text=""
                android:textSize="@dimen/y13"
                android:textColor="@color/color_333333"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/x56"
        android:layout_marginRight="@dimen/x56"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_officical"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/y14"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            
            <ImageView
                android:id="@+id/img_official"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/official_car"/>

            <TextView
                android:layout_marginTop="@dimen/y7"
                android:id="@+id/tv_official"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公务轿车"
                android:textColor="@color/color_38adff"
                android:textSize="@dimen/y11"/>

            <ImageView
                android:id="@+id/img_line_official"
                android:layout_width="@dimen/x47"
                android:layout_height="@dimen/y3"
                android:background="@color/color_38adff"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_business"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/y14"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_business"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/business_seven"/>

            <TextView
                android:layout_marginTop="@dimen/y7"
                android:id="@+id/tv_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商务七座"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/y11"/>

            <ImageView
                android:id="@+id/img_line_business"
                android:visibility="invisible"
                android:layout_width="@dimen/x47"
                android:layout_height="@dimen/y3"
                android:background="@color/color_38adff"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_limousine"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/y14"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/img_limousine"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/limousine"/>

            <TextView
                android:layout_marginTop="@dimen/y7"

                android:id="@+id/tv_limousine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="豪华轿车"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/y11"/>

            <ImageView
                android:id="@+id/img_line_limousine"
                android:visibility="invisible"
                android:layout_width="@dimen/x47"
                android:layout_height="@dimen/y3"
                android:background="@color/color_38adff"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y85"
        android:background="@color/theme_white"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

        <TextView
            android:layout_marginLeft="@dimen/x56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/y13"
            android:text="预估价:"
            android:textColor="@color/color_333333"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_weight="1"
            android:textColor="#f44b4b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0元"
            android:textSize="@dimen/y21"/>

        <TextView
            android:id="@+id/tv_priceDital"
            android:layout_marginRight="@dimen/x56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格明细"
            android:textSize="@dimen/y10"
            android:textColor="@color/color_38adff"/>

        </LinearLayout>

    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_order"
        android:layout_marginLeft="@dimen/x56"
        android:layout_marginRight="@dimen/x56"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y38"
        android:textColor="@color/theme_white"
        android:text="立即下单"
        android:layout_marginTop="@dimen/y28"
        android:textSize="@dimen/y12"
        android:background="@drawable/shape_bg_4_blue"/>

</LinearLayout>
