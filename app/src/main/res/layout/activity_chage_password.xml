<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kg.konggang_guide.other.activity.ChangePasswordActivity">

    <include layout="@layout/aaa_app_title"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@mipmap/icon_account"/>

                <EditText
                    android:inputType="phone"
                    android:maxLength="11"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:id="@+id/et_userId"
                    android:layout_marginLeft="@dimen/dimen_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的手机号"
                    android:background="@null"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_a5a5a5"
                    android:textSize="@dimen/theme_text_18"/>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/img_delete"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="@dimen/dimen_16"
                    android:src="@mipmap/icon_delete_grey"/>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dimen_9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_d7d7d7">
            </View>


            <LinearLayout
                android:layout_marginTop="@dimen/dimen_35"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@mipmap/identifying_code"/>

                <EditText
                    android:layout_weight="1"
                    android:maxLength="4"
                    android:inputType="number"
                    android:singleLine="true"
                    android:id="@+id/et_code"
                    android:layout_marginLeft="@dimen/dimen_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入验证码"
                    android:background="@null"
                    android:textColorHint="@color/color_a5a5a5"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/theme_text_18"/>

                <ImageView
                    android:layout_width="@dimen/dimen_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/color_EAEAEA"/>

                <TextView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:textColor="@color/color_a5a5a5"
                    android:id="@+id/tv_getCode"
                    android:textSize="@dimen/dimen_12"/>
            </LinearLayout>





            <View
                android:layout_marginTop="@dimen/dimen_9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_d7d7d7">
            </View>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_35"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@mipmap/icon_password"/>

                <EditText
                    android:maxLength="20"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:id="@+id/et_password"
                    android:layout_marginLeft="@dimen/dimen_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入新密码"
                    android:background="@null"
                    android:textColorHint="@color/color_a5a5a5"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/theme_text_18"/>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dimen_9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_d7d7d7">
            </View>



            <TextView
                android:layout_marginLeft="@dimen/dimen_33"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/theme_text_16"
                android:text="密码为6-20位数字、字母组合"
                android:textColor="@color/color_333333"/>


            <TextView
                android:layout_marginTop="@dimen/dimen_44"
                android:enabled="false"
                android:gravity="center"
                android:layout_width="@dimen/dimen_440"
                android:layout_height="@dimen/dimen_50"
                android:text="完成"
                android:id="@+id/tv_login"
                android:background="@drawable/tv_cir_bg"
                android:textSize="@dimen/theme_text_20"
                android:textColor="@color/theme_white"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
