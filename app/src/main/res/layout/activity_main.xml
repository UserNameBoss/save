<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kg.konggang_guide.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dimen_280"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_22"
            android:background="@color/theme_white"/>


        <LinearLayout
            android:paddingTop="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_white"
            android:paddingBottom="@dimen/dimen_15">

            <com.kg.konggang_guide.other.widget.CircleImageView
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:src="@mipmap/touxiang"
                android:layout_marginLeft="@dimen/dimen_20"
                android:id="@+id/img_guideIcon"/>

            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出行管家"
                android:textSize="@dimen/dimen_18"
                android:textColor="@color/color_333333"/>

            <FrameLayout
                android:id="@+id/fl_message"
                android:layout_marginRight="@dimen/dimen_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="@dimen/dimen_2"
                    android:layout_marginRight="@dimen/dimen_2"
                    android:layout_width="@dimen/dimen_23"
                    android:layout_height="@dimen/dimen_23"
                    android:src="@mipmap/icon_msg_black"/>

                <TextView
                    android:id="@+id/tv_msgCount"
                    android:layout_gravity="top|right"
                    android:layout_width="@dimen/dimen_14"
                    android:layout_height="@dimen/dimen_14"
                    android:textColor="@color/theme_white"
                    android:textSize="@dimen/theme_text_10"
                    android:background="@drawable/shape_msg_bg"
                    android:gravity="center"
                    android:visibility="visible"
                    android:text="4"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/theme_white">
            
            <LinearLayout
                android:id="@+id/ll_await"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/tv_await"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待服务"
                    android:textSize="@dimen/theme_text_18"
                    android:textColor="@color/color_38adff"/>

                <ImageView
                    android:layout_below="@+id/tv_await"
                    android:id="@+id/img_await"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_5"
                    android:src="@mipmap/icon_choose_blue"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_await2"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/tv_await2"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待接单"
                    android:textSize="@dimen/theme_text_18"
                    android:textColor="@color/color_333333"/>

                <ImageView
                    android:visibility="invisible"
                    android:layout_below="@+id/tv_await"
                    android:id="@+id/img_await2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_5"
                    android:src="@mipmap/icon_choose_blue"/>
            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/vpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>

            <TextView
                android:id="@+id/tv_nowOrder"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_100"
                android:background="@mipmap/make_order"
                android:text="立即下单"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_20"
                android:textSize="@dimen/theme_text_16"
                android:textColor="@color/theme_white"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_22"
            android:background="@color/theme_white"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_white">

            <TextView
                android:layout_marginTop="@dimen/dimen_10"
                android:id="@+id/tv_title"
                android:layout_marginBottom="@dimen/dimen_12"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="派车"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/theme_text_16"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_changeGuide"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/theme_white"
            android:layout_marginRight="@dimen/dimen_10">

            <LinearLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/dimen_35">

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_56"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_15">

                    <ImageView
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_width="@dimen/dimen_15"
                        android:layout_height="@dimen/dimen_19"
                        android:src="@mipmap/time_big"/>

                    <TextView
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_a5a5a5"
                        android:textSize="@dimen/theme_text_16"
                        android:text="用车时间："/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_a5a5a5"
                        android:textSize="@dimen/theme_text_16"
                        android:id="@+id/tv_time"
                        android:text="今天"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginRight="@dimen/dimen_15"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100"
                    android:orientation="horizontal"
                    android:background="@color/theme_white"
                    android:gravity="center_vertical">


                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen_7"
                            android:layout_height="@dimen/dimen_7"
                            android:src="@mipmap/grey_point"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_38"
                            android:src="@mipmap/grey_line"
                            android:scaleType="fitXY"/>
                        <ImageView
                            android:layout_width="@dimen/dimen_7"
                            android:layout_height="@dimen/dimen_7"
                            android:src="@mipmap/blue_point"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/dimen_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dimen_15"
                                android:background="@null"
                                android:id="@+id/tv_from"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textColor="@color/color_333333"
                                android:text="上车地点"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/dimen_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dimen_15"
                                android:background="@null"
                                android:id="@+id/tv_to"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textColor="@color/color_333333"
                                android:text="下车地点"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/dimen_15"
                        android:layout_height="@dimen/dimen_19"
                        android:src="@mipmap/icon_account"/>

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/theme_text_16"
                        android:textColor="@color/color_a5a5a5" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_chanageGuide"
                    android:layout_marginTop="@dimen/dimen_80"
                    android:gravity="center"
                    android:textColor="@color/theme_white"
                    android:layout_width="@dimen/dimen_240"
                    android:layout_height="@dimen/dimen_50"
                    android:text="改派"
                    android:textSize="@dimen/theme_text_19"
                    android:background="@drawable/shape_blue_2_bg"/>

            </LinearLayout>

            <View
                android:layout_width="@dimen/dimen_0.5"
                android:layout_height="match_parent"
                android:background="@color/color_EAEAEA"/>

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <com.jcodecraeer.xrecyclerview.XRecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/xrv_car">
                </com.jcodecraeer.xrecyclerview.XRecyclerView>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:paddingLeft="@dimen/dimen_175"
            android:id="@+id/ll_order"
            android:visibility="gone"
            android:background="@color/theme_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_185"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_10">

                <ImageView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/flight_big"/>

                <TextView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/theme_text_16"
                    android:text="航班号："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/theme_text_16"
                    android:id="@+id/tv_flight"
                    android:text="今天"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_10">

                <ImageView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/time_big"/>

                <TextView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/theme_text_16"
                    android:text="用车时间："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_a5a5a5"
                    android:textSize="@dimen/theme_text_16"
                    android:id="@+id/tv_order_time"
                    android:text="今天"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@color/theme_white"
                android:gravity="center_vertical">


                <LinearLayout
                    android:layout_marginLeft="@dimen/dimen_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/grey_point"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_38"
                        android:src="@mipmap/grey_line"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/blue_point"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dimen_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/theme_text_19"
                            android:background="@null"
                            android:id="@+id/tv_order_from"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/color_333333"
                            android:text="上车地点"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:minWidth="@dimen/dimen_240"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/theme_text_19"
                            android:background="@null"
                            android:id="@+id/tv_order_to"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/color_333333"
                            android:text="下车地点"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_order"
                    android:gravity="center"
                    android:textColor="@color/theme_white"
                    android:layout_width="@dimen/dimen_173.75"
                    android:layout_height="@dimen/dimen_50"
                    android:text="接单"
                    android:textSize="@dimen/theme_text_19"
                    android:background="@drawable/shape_blue_2_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_account"/>

                <TextView
                    android:id="@+id/tv_order_phone"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/theme_text_16"
                    android:textColor="@color/color_a5a5a5"
                    android:text="123235454"/>

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:id="@+id/ll_nowOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_white"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="@dimen/dimen_100"
                android:layout_width="@dimen/dimen_440"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_14"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@mipmap/airport"/>
                <EditText
                    android:id="@+id/et_now_from"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:hint="请输入上车地点"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/theme_text_18"
                    android:background="@null"/>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dimen_19"
                android:layout_width="@dimen/dimen_440"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_d7d7d7"/>



            <LinearLayout
                android:layout_marginTop="@dimen/dimen_33"
                android:layout_width="@dimen/dimen_440"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_14"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@mipmap/your_destination"/>
                <EditText
                    android:id="@+id/et_now_to"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:hint="请输入您的目的地"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/theme_text_18"
                    android:background="@null"/>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dimen_19"
                android:layout_width="@dimen/dimen_440"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_d7d7d7"/>



            <LinearLayout
                android:layout_marginTop="@dimen/dimen_33"
                android:layout_width="@dimen/dimen_440"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_14"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@mipmap/icon_account"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:hint="请输入乘客手机号"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/theme_text_18"
                    android:background="@null"/>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dimen_19"
                android:layout_width="@dimen/dimen_440"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_d7d7d7"/>


            <TextView
                android:layout_marginTop="@dimen/dimen_45"
                android:enabled="false"
                android:gravity="center"
                android:layout_width="@dimen/dimen_440"
                android:layout_height="@dimen/dimen_50"
                android:text="立即下单"
                android:id="@+id/tv_login"
                android:background="@drawable/tv_cir_bg"
                android:textSize="@dimen/theme_text_20"
                android:textColor="@color/theme_white"/>

        </LinearLayout>


        </LinearLayout>

</LinearLayout>
