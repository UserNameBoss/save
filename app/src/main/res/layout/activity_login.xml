<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/dimen_30"
    tools:context="com.kg.konggang_guide.other.activity.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_22"
        android:background="@color/color_38adff"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_38adff">

        <com.kg.konggang_guide.other.widget.CircleImageView
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img_icon"/>

        <TextView
            android:layout_marginBottom="@dimen/dimen_37"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空港出行"
            android:textSize="@dimen/theme_text_16"
            android:textColor="@color/theme_white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_width="714dp"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:background="@color/theme_white">

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@mipmap/icon_account"/>

                <EditText
                    android:inputType="number"
                    android:maxLength="11"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:id="@+id/et_userId"
                    android:layout_marginLeft="@dimen/dimen_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的手机号或ID账号"
                    android:background="@null"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_a5a5a5"
                    android:textSize="@dimen/theme_text_18"/>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/img_delete"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="@dimen/dimen_16"
                    android:src="@mipmap/icon_delete_grey"/>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dimen_17"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_d7d7d7">
            </View>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_34.5"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@mipmap/icon_password"/>

                <EditText
                    android:maxLength="20"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:id="@+id/et_password"
                    android:layout_marginLeft="@dimen/dimen_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的密码"
                    android:background="@null"
                    android:textColorHint="@color/color_a5a5a5"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/theme_text_18"/>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dimen_17"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_d7d7d7">
            </View>

            <LinearLayout
                android:id="@+id/ll_code"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_34.5"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@mipmap/identifying_code"/>

                <EditText
                    android:layout_weight="1"
                    android:maxLength="18"
                    android:inputType="number"
                    android:singleLine="true"
                    android:id="@+id/et_code"
                    android:layout_marginLeft="@dimen/dimen_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入验证码"
                    android:background="@null"
                    android:textColorHint="@color/color_a5a5a5"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/theme_text_18"/>

                <ImageView
                    android:layout_width="@dimen/dimen_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/color_EAEAEA"/>

                <TextView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:textColor="@color/color_38adff"
                    android:id="@+id/tv_getCode"
                    android:textSize="@dimen/dimen_12"/>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dimen_17"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_d7d7d7">
            </View>

                </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/dimen_45"
                android:enabled="false"
                android:gravity="center"
                android:layout_width="@dimen/dimen_440"
                android:layout_height="@dimen/dimen_50"
                android:text="登录"
                android:id="@+id/tv_login"
                android:background="@drawable/tv_cir_bg"
                android:textSize="@dimen/theme_text_20"
                android:textColor="@color/theme_white"/>

            <TextView
                android:id="@+id/tv_noPassword"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dimen_20"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textSize="@dimen/theme_text_16"
                android:textColor="@color/color_38adff"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
