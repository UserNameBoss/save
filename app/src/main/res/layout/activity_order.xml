<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kg.konggang_guide.other.activity.OrderActivity">

    <include layout="@layout/aaa_app_title"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_white">
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_173.75"
            android:layout_marginRight="@dimen/dimen_173.75"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_7"
                    android:layout_height="@dimen/dimen_7"
                    android:src="@mipmap/grey_point"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_65"
                    android:src="@mipmap/grey_line"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_width="@dimen/dimen_7"
                    android:layout_height="@dimen/dimen_7"
                    android:src="@mipmap/blue_point"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dimen_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/theme_text_20"
                        android:background="@null"
                        android:id="@+id/tv_from"
                        android:textColor="@color/color_333333"
                        android:hint="请填写上车地点"/>

                    <ImageView
                        android:layout_marginRight="@dimen/dimen_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/app_more"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/theme_text_20"
                        android:background="@null"
                        android:id="@+id/tv_to"
                        android:textColor="@color/color_333333"
                        android:hint="请填写下车地点"/>

                    <ImageView
                        android:layout_marginRight="@dimen/dimen_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/app_more"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/dimen_60"
            android:layout_marginTop="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_185"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_19"
                android:src="@mipmap/icon_account"/>

            <TextView
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_phone"
                android:text="123434434"
                android:textSize="@dimen/theme_text_20"
                android:textColor="@color/color_333333"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dimen_173.75"
        android:layout_marginRight="@dimen/dimen_173.75"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_officical"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dimen_23"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            
            <ImageView
                android:id="@+id/img_official"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="wrap_content"
                android:src="@mipmap/official_car"/>

            <TextView
                android:id="@+id/tv_official"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公务轿车"
                android:textColor="@color/color_38adff"
                android:textSize="@dimen/theme_text_18"/>

            <ImageView
                android:id="@+id/img_line_official"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_4"
                android:background="@color/color_38adff"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_business"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dimen_23"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_business"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="wrap_content"
                android:src="@mipmap/business_seven"/>

            <TextView
                android:id="@+id/tv_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商务七座"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/theme_text_18"/>

            <ImageView
                android:id="@+id/img_line_business"
                android:visibility="invisible"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_4"
                android:background="@color/color_38adff"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_limousine"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dimen_23"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/img_limousine"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="wrap_content"
                android:src="@mipmap/limousine"/>

            <TextView
                android:id="@+id/tv_limousine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="豪华轿车"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/theme_text_18"/>

            <ImageView
                android:id="@+id/img_line_limousine"
                android:visibility="invisible"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_4"
                android:background="@color/color_38adff"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_135"
        android:background="@color/theme_white"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

        <TextView
            android:layout_marginLeft="@dimen/dimen_173.75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/theme_text_20"
            android:text="预估价:"
            android:textColor="@color/color_333333"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_weight="1"
            android:textColor="#f44b4b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49.3元"
            android:textSize="@dimen/theme_text_33"/>

        <TextView
            android:id="@+id/tv_priceDital"
            android:layout_marginRight="@dimen/dimen_173.75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格明细"
            android:textSize="@dimen/theme_text_13"
            android:textColor="@color/color_38adff"/>

        </LinearLayout>

    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_order"
        android:layout_marginLeft="@dimen/dimen_173.75"
        android:layout_marginRight="@dimen/dimen_173.75"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:textColor="@color/theme_white"
        android:text="立即下单"
        android:layout_marginTop="@dimen/dimen_45"
        android:textSize="@dimen/theme_text_19"
        android:background="@drawable/shape_bg_4_blue"/>

</LinearLayout>
