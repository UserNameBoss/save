<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kg.konggang_guide.other.activity.PriceDitailsActivity">

    <include layout="@layout/aaa_app_title"/>

    <LinearLayout
        android:paddingLeft="@dimen/dimen_185"
        android:paddingRight="@dimen/dimen_185"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_185"
        android:layout_marginRight="@dimen/dimen_185"
        android:layout_marginBottom="@dimen/dimen_100"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_1">

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_95"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_60"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_333333"/>
            <TextView
                android:layout_marginLeft="@dimen/dimen_9"
                android:layout_marginRight="@dimen/dimen_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格预估"
                android:textSize="@dimen/theme_text_13"
                android:textColor="@color/color_333333"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/color_333333"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1358.5"
                android:textSize="@dimen/theme_text_40"
                android:textColor="@color/color_333333"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/theme_text_20"
                android:text="元"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_27"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起步价"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10元"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_27"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="里程(10公里)"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10元"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_27"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时长费(50分钟)"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10元"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_27"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="远途费（5.63公里）"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10元"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_27"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出城费（5.63公里）"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10元"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_27"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="路桥费"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10元"
                android:textSize="@dimen/theme_text_18"
                android:textColor="@color/color_666666"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
