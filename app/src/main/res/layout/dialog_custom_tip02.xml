<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_38"
        android:layout_marginRight="@dimen/dimen_38"
        android:layout_height="@dimen/dimen_130"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_10_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_message"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:gravity="center"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_height="@dimen/dimen_85"
            android:textSize="@dimen/theme_text_19"
            android:textStyle="bold"
            android:textColor="@color/theme_focus"
            android:layout_gravity="center"
            android:text="你还不是主播,快去成为主播" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/theme_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:orientation="horizontal">

            <Button
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_45"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="取消"
                android:textColor="@color/color_b6bbcc"
                android:textSize="@dimen/theme_text_16" />

            <!--<View-->
                <!--android:layout_width="1px"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/theme_line" />-->

            <Button
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_45"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="去认证"
                android:textColor="@color/theme_focus"
                android:textSize="@dimen/theme_text_16" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>