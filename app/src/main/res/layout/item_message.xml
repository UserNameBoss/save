<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingLeft="@dimen/dimen_20"
        android:background="@color/theme_white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_25"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="@dimen/dimen_20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                android:src="@mipmap/order_to_order"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_19"
                android:text="改派订单"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a5a5a5"
                android:id="@+id/tv_time"
                android:text="2017-5-30 12:40"
                android:textSize="@dimen/theme_text_16"/>


            <TextView
                android:id="@+id/tv_dispose"
                android:layout_marginRight="@dimen/dimen_50"
                android:gravity="center"
                android:background="@drawable/shape_bg_4_blue"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_50"
                android:text="去处理"
                android:textSize="@dimen/theme_text_19"
                android:textColor="@color/theme_white"/>

        </LinearLayout>

        <TextView
            android:layout_marginBottom="@dimen/dimen_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/theme_text_18"
            android:text="有一个订单要处理"/>

    </LinearLayout>

</LinearLayout>