<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dimen_50"
    android:paddingRight="@dimen/dimen_50"
    android:id="@+id/ll_changePassword"
    android:visibility="gone">

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_38"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textSize="@dimen/theme_text_18"
            android:textColor="@color/color_333333"/>
        <TextView
            android:id="@+id/tv_passwordPhone"
            android:layout_marginRight="@dimen/dimen_10"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="@dimen/theme_text_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a5a5a5"
            android:text="18526565"/>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/color_d7d7d7"/>


    <LinearLayout
        android:layout_marginTop="@dimen/dimen_28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录密码"
            android:textSize="@dimen/theme_text_18"
            android:textColor="@color/color_333333"/>
        <TextView
            android:id="@+id/tv_password"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/dimen_35"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_weight="1"
            android:textSize="@dimen/theme_text_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a5a5a5"
            android:text="可修改密码"/>
        <ImageView
            android:id="@+id/img_eye"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_13"
            android:src="@mipmap/password_g"/>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/color_d7d7d7"/>



    <LinearLayout
        android:layout_marginTop="@dimen/dimen_28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置新密码"
            android:textSize="@dimen/theme_text_18"
            android:textColor="@color/color_333333"/>
        <EditText
            android:id="@+id/et_newPassword"
            android:background="@null"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_weight="1"
            android:textSize="@dimen/theme_text_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a5a5a5"
            android:hint="请输入新密码"
            android:textColorHint="@color/color_a5a5a5"
            android:inputType="textPassword"/>

        <ImageView
            android:id="@+id/img_newEye"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_13"
            android:src="@mipmap/password_g"/>
    </LinearLayout>


    <View
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/color_d7d7d7"/>


    <TextView
        android:layout_marginTop="@dimen/dimen_135"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_width="@dimen/dimen_250"
        android:layout_height="@dimen/dimen_45"
        android:text="完成"
        android:id="@+id/tv_commit"
        android:textSize="@dimen/theme_text_18"
        android:layout_marginBottom="@dimen/dimen_50"
        android:textColor="@color/theme_white"
        android:background="@drawable/shape_bg_4_blue"/>

</LinearLayout>