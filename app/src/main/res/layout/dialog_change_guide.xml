<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_white">


    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:text="改派"
        android:textSize="@dimen/theme_text_18"
        android:textColor="@color/color_333333"
        android:background="#ececec"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_38"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接单人账号："
            android:textSize="@dimen/theme_text_18"
            android:textColor="@color/color_333333"/>

        <EditText
            android:id="@+id/et_guideCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入接单者账号"
            android:textSize="@dimen/theme_text_18"
            android:textColorHint="@color/color_a5a5a5"
            android:textColor="@color/color_a5a5a5"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/color_EAEAEA"/>

    <TextView
        android:layout_marginTop="@dimen/dimen_25"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注："
        android:textColor="@color/color_333333"
        android:textSize="@dimen/theme_text_18"/>
    
    <EditText
        android:id="@+id/et_message"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_50"
        android:layout_width="match_parent"
        android:background="#f3f5f9"
        android:gravity="top"
        android:paddingTop="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_20"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/theme_text_18"
        android:layout_height="@dimen/dimen_135" />
    
    <LinearLayout
        android:layout_marginBottom="@dimen/dimen_60"
        android:layout_marginTop="@dimen/dimen_65"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/tv_cancel"
            android:textSize="@dimen/theme_text_18"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_45"
            android:text="取消"
            android:textColor="@color/theme_white"
            android:background="@drawable/shape_bg_4_grey"/>

        <TextView
            android:id="@+id/tv_quit"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_38"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_45"
            android:text="完成"
            android:textSize="@dimen/theme_text_18"
            android:textColor="@color/theme_white"
            android:background="@drawable/shape_bg_4_blue"/>


    </LinearLayout>

</LinearLayout>